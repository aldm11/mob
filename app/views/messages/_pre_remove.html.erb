<div class='modal hide fade remove-confirm'>
	<div class='modal-header'>Confirm action</div>
	<div class='modal-body'>
		<%= form_tag url_for(:action => "remove"), :remote => true do %>
			<p>Are you sure that you want to delete this message?</p>
			<%= hidden_field_tag "message_id", params[:message_id] %>
			<%= hidden_field_tag "type", params[:type] %>
			<%= submit_tag "Yes", :class => "btn btn-danger" %>
			<%= button_tag "Cancel", :type => "reset", :class => "btn" %>
		<% end %>
	</div>
</div>