<div class="span4 messages-container">
	<div class="row-fluid search-sort">
		<div class="pull-left sort-messages input-append">
			<%= link_to "#", :class => "btn btn-small disabled", :id => "sort_messages_date", :title => "Sort by date" do %>
			<i class="icon-arrow-down"></i> Date
			<% end %>
			
			<%= link_to "#", :class => "btn btn-small", :id => "sort_messages_unread", :title => "Show unread first" do %>
			<i class="icon-arrow-down"></i> Unread
			<% end %>
		</div>
		<div class="pull-right search">
			<%= text_field_tag "term", "", :class => "input-medium search-query", :placeholder => "Search messages" %>
		</div>
	</div>
	
	<div class="row-fluid select-delete">
		<div class="pull-left">
			<label class="checkbox inline">
				<%= check_box_tag "select-all" %> Select all
			</label>
		</div>
		
		<div class="pull-right">
			<%= link_to "#", :class => "btn btn-small delete-messages" do %>
			<i class="icon-remove-sign"></i> Delete
			<% end %>
		</div>
	</div>
	
	<ul class="nav nav-tabs small">
		<li class="active"><%= link_to "Received", "#received", "data-toggle" => "tab" %></li>
		<li><%= link_to "Sent", "#sent", "data-toggle" => "tab" %></li>
	</ul>
	
	<div class="tab-content">	
		<div class=" tab-pane active row-fluid messages" id="received">
			<% if @inbox.empty? %>
			<div class="muted no-messages">
				No received messages
			</div>
			<% else %>
			<% @inbox.each do |message| %>
			<%= render(:partial => "messages/message_item", :locals => {:message => message}) %>
			<% end %>
			<% end %>
		</div>
		
		<div class=" tab-pane row-fluid messages" id="sent">
			<% if @outbox.empty? %>
			<div class="muted no-messages">
				No sent messages
				<%= link_to "Send new message", new_message_path %>
			</div>
			<% else %>
			<% @outbox.each do |message| %>
			<%= render(:partial => "messages/message_item", :locals => {:message => message}) %>
			<% end %>
			<% end %>
		</div>
	</div>
</div>