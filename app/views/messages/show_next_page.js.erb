var messages_html = $("<%= escape_javascript(render(:partial => @view, :locals => @params)) %>");
$("<%= @container %>").html(messages_html);

<% if @conversation %>
	var conversation_html = $("<%= escape_javascript(render(:partial => "messages/conversation", :locals => {:conversation => @conversation})) %>");
<% else %>
	var conversation_html = "";	
<% end %>
$(".messages-center").html(conversation_html);

var new_message_html = $("<%= escape_javascript(render(:partial => "messages/new", :locals => {:receivers_usernames => [], :to => @other_part, :reply_to => @conversation ? @conversation.last.id : nil})) %>");
$(".messages-center").append(new_message_html);
