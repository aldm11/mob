<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :remote => true, :html => { 'data-type' => "html", :id => "login_form", :class => "login-form" }) do |f| %>
	<%= f.label :email %>
	<%= f.text_field :email %>

	<%= f.label :password %>
  	<%= f.password_field :password %>

	<div>
		<%= f.label :remember_me %>
		<%= f.check_box :remember_me %>
	</div>

	<div>
  		<%= f.submit I18n.t("login.sign_in"), :class => "btn btn-primary login-btn" %>
  	</div>
  
	<div>
		<div class="controls"><%= render :partial => "accounts/shared/links", :locals => {:resource_name => resource_name, :controller_name => "sessions", :resource_class => resource_name.to_s.downcase.camelize.constantize.new} %></div>
	</div>
<% end %>