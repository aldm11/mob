<h3>Unos mobitela</h3>
<%= form_for(@phone, :url => { :action => params[:action] == "new" ? "create" : "update" }, :html => { :class => "add-phone", :multipart => "true" }) do |f| %>
<div>
	<div class="control-label"><%= f.label :brand %></div>
	<div class="controls"><%= f.text_field :brand %></div>
</div>

<div>
	<div class="control-label"><%= f.label :model %></div>
	<div class="controls"><%= f.text_field :model %></div>
</div>

<div>
	<div class="control-label"><%= f.label :weight %></div>
	<div class="controls"><%= f.text_field :weight %></div>
	<span>g</span>
</div>

<div>
	<div class="control-label"><%= f.label :height %></div>
	<div class="controls"><%= f.text_field :height %></div>
	<span>cm</span>
</div>

<div>
	<div class="control-label"><%= f.label :display %></div>
	<div class="controls"><%= f.text_field :display %></div>
</div>

<div>
	<div class="control-label"><%= f.label :internal_memory %></div>
	<div class="controls"><%= f.text_field :internal_memory %></div>
	<span>MB</span>
</div>

<div>
	<div class="control-label"><%= f.label :external_memory %></div>
	<div class="controls"><%= f.text_field :external_memory %></div>
	<span>MB</span>
</div>

<div>
	<div class="control-label"><%= f.label :camera, "Kamera" %></div>
	<div class="controls">
		<div>
			<label>Mpixels</label><%= text_field_tag "camera[mpixels]", @phone.camera ? @phone.camera["mpixels"] : "", :class => "input-mini" %>
		</div>
		<div>
			<label>Prednja kamera</label><%= check_box "camera", "front", {:checked => @phone.camera && @phone.camera["front"] ? true : false} %>
		</div>
		<div>
			<label>Video</label><%= check_box "camera", "video", {:checked => @phone.camera && @phone.camera["video"] ? true : false} %>
		</div>
		<div>
			<label>Blic</label><%= check_box "camera", "blic", {:checked => @phone.camera && @phone.camera["blic"] ? true : false} %>
		</div>

	</div>
</div>

<div>
	<div class="control-label"><%= f.label :os %></div>
	<div class="controls"><%= f.text_field :os %></div>
</div>

<div>
	<div class="control-label"><%= f.label :image %></div>
	<div class="controls"><%= f.file_field :image, :id => "add_phone" %></div>
	<div class="row-fluid existing-images">
		<div class="span2"><small>Amazon small</small><%= image_tag @phone_dec.image_path_small %></div>
		<div class="span2"><small>Amazon medium</small><%= image_tag @phone_dec.image_path_medium %></div>
		<div class="span2"><small>User defined</small><%= image_tag @phone_dec.defined_image_path %></div>
	</div>
</div> 

<div>
	<div class="controls"><%= f.submit I18n.t("phones.save_phone"), :class => "btn btn-primary" %></div>
</div>
<% end %>
