<% if @saved %>
var comment_html = $("<%= escape_javascript(render(:partial => 'phones/comment_item', :locals => {:comment => @comment})) %>");
if($(".comments").children("p").size() > 0){
	$(".comments").children("p").remove();
}
$(".comments").prepend(comment_html);
<% else %>
$("#comment_text").css({"border" : "1px solid red"});
<% end %>
