$("#loading_big").remove();
<% @comments.each do |comment| %>
var comment = $("<%= escape_javascript(render(:partial => 'phones/comment_item', :locals => {:comment => comment})) %>");
$(".comments").append(comment);
<% end %>

<% if @to < @all_comments.length - 1 %>
var load_more = $("<%= escape_javascript(render(:partial => "comments/load_more_comments")) %>");
$(".phone-comments").append(load_more);
<% end %>

$(document).scrollTop($(".comments").position().top + $(".comments").height());