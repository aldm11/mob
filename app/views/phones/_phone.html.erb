<div id="addCommentPopup" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="addCommentTitle" aria-hidden="true">
	<div class="modal-header phone-popup-main">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		<%= content_tag("h3", phone_data.phone.name) %>
		
		<ul class="nav nav-tabs" id="tabsPhoneMain">
			<li><a href="#aboutPhone"><%= I18n.t("phone") %></a></li>
			<li><a href="#phoneComments"><%= I18n.t("phone_comments") %></a></li>
		</ul>
	</div>
	<div class="modal-body">
	  	<div class="tab-content">
	  		<div class="tab-pane active" id="phoneComments">
				<%= render :partial => "phones/phone_comments_preview_tab", :locals => {:phone_data => phone_data} %>
			</div>
			<div class="tab-pane" id="aboutPhone">
				<%= render :partial => "phones/phone_preview_tab", :locals => {:phone => phone_data.phone} %>
			</div>
		</div>
	</div>
</div>