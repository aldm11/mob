<!DOCTYPE html>
<html>
<head>
  <title>Mobis</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= body_class_for_request %>">
<%= render "layouts/header" %>
<% flash.each do |key, message| %>
<%= content_tag(:div, :class => "alert alert-#{key.to_s}") do %>
<%= message %>
<button type="button" class="close" data-dismiss="alert">&times;</button>
<% end %>
<% end %>
<div class="container-fluid">
	<div class="row-fluid">
		<div class="span2">
			<ul class="nav nav-pills nav-stacked">
			<li><%= link_to("Dodaj mobitel", new_admin_phones_path) %></li>
			<li><%= link_to("Attributi mobitela", admin_phones_attributes_path) %></li>
			<li><%= link_to("Import mobitela", admin_phones_import_phones_path) %></li>
			<li><%= link_to("Reindeksiraj mobitele", admin_phones_reindex_path, :confirm => "Jeste li sigurni? Ova akcija pokrece reindeksiranje svih telefona i website moze biti privremeno nedostupan") %></li>
			</ul>
		</div>
	
		<div class="span8">
			<%= yield %>
		</div>
	</div>
</div>

<%= render "layouts/footer" %>
</body>
</html>
