<header class="navbar navbar-inverse">
	<div class="navbar-inner">
		<div class="container-fluid">
			<%= link_to "Mobis", root_path, :class => "brand" %>
		
			<form action="http://www.goal.com" method="post" class="navbar-search form-search">
			<%= text_field_tag "term", "", :class => "input-medium search-query" %>
			</form>
			<nav>
				<ul class="nav pull-right">
					<li>
					<% unless account_signed_in? %>
					<%= link_to "Registracija", register_path %>
					<li class="dropdown">
						<%= link_to I18n.t(:login), "#", :class => "dropdown-toggle", "data-toggle" => "dropdown" %>
						<div class="dropdown-menu" style="padding: 10px;">
							<%= render :partial => "shared/login", :locals => { :resource  => Account.new, :resource_name => :account } %>
						</div>
					</li>
					<% else %>
					<%= render :partial => "shared/signed_in_links" %>
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown">
    						<i class="icon-user icon-white"></i>
    						<%= current_account.rolable.name %>
    						<span class="caret"></span>
    					</a>
						<ul class="dropdown-menu">
							<li>
								<%= link_to "My profile", "#" %>
								<%= link_to "Logout", destroy_account_session_path, :method => "delete" %>
							</li>
						</ul>
					</li>
					<% end %>
					</li>
				</ul>
			</nav>
		</div>
	</div>
</header>
