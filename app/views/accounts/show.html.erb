<h3><%= @account_info[:name][:value] + " " + "contact info" %></h3>


<table class="table table-hover">
	<tbody>
	<% @account_info.each do |attr, details| %>
		<% if  attr != :name && details[:display] %>
			<tr class="<%= details[:value].blank? ? "warning" : "success" %>">
			<td><%= details[:label] %></td>
	  		<td><%= details[:value] %></td>
	  		<td>
	  			<%= details[:value].blank? ? link_to("Edit", "#", :class => "text-warning") : link_to("Add", "#", :class => "text-success") %>
	  		</td>
	  		</tr>
	  	<% end %>
	<% end %>
	</tbody>
</table>
