<div class="row-fluid">
	<div class="span2">
		<%= render :partial => "shared/brands_home", :locals => { :brands => @brands } %>
	</div>
	
	<div class="span9">
		<%= render :partial => "shared/search_options" %>
		
		<div class="phones-grid">
			<% divide_in_groups(@phones, 4).each do |group, items| %>
				<div class="row-fluid thumbnails phones-row-main">
				<% items.each do |phone| %>
				<%= render :partial => "shared/phone_main", :locals => { :phone => phone } %>
				<% end %>
				</div>
			<% end %>
		</div>
		
	</div>
</div>

